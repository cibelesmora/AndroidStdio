<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/saludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="77dp"
        android:text="Hola"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Pregunta"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/Pregunta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/CajaNombre"
        android:layout_width="265dp"
        android:layout_height="73dp"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="@string/CajaNombre"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/CajaNombre"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/SayHiBtn"
        app:layout_constraintStart_toStartOf="@+id/SayHiBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661"
        tools:targetApi="o" />

    <Button
        android:id="@+id/SayHiBtn"
        android:layout_width="157dp"
        android:layout_height="76dp"
        android:layout_marginBottom="135dp"
        android:background="#00BCD4"
        android:text="@string/SayHiBtn"
        android:textColor="#455A64"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pregunta"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Pregunta"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:layout_marginBottom="233dp"
        android:text="@string/Pregunta"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CajaNombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CajaNombre"
        app:layout_constraintTop_toBottomOf="@+id/saludo"
        app:layout_constraintVertical_bias="0.381" />

</androidx.constraintlayout.widget.ConstraintLayout>